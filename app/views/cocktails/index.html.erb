
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.doitinparis.com/files/2016/bars_restos/thumbs-1180x525/dirty-dick.jpg);">
  <div class="container">
    <h1>Cocktails</h1>
    <p><%= link_to 'New cocktail', new_cocktail_path, class: "btn btn-flat"%></p>
  </div>
</div>
<div class="card_container, d-flex justify-content-center">
  <% @cocktails.each do |cocktail| %>
    <div class="card-product">
      <% if @cocktail.photo.attached? %>
        <%= cl_image_tag @cocktail.photo.key, width: 400, height: 300, crop: :fill %>
      <% else %>
        <%= image_tag 'default-picture.jpg', width: 400 %>
      <% end %>
        <div class="card-product-infos">
          <%=link_to cocktail.name, cocktail_path(cocktail)%>
        </div>
    </div>
  <% end %>
</div>








