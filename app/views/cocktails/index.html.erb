
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.doitinparis.com/files/2016/bars_restos/thumbs-1180x525/dirty-dick.jpg);">
  <div class="container">
    <h1>Cocktails</h1>
    <p><%= link_to 'New cocktail', new_cocktail_path, class: "btn btn-flat"%></p>
  </div>
</div>
<div class="card_container, d-flex justify-content-center">
  <% @cocktails.each do |cocktail| %>
    <div class="card-product">
    <img src="https://assets.afcdn.com/recipe/20180705/80346_w1024h768c1cx1727cy777cxt0cyt0cxb3883cyb2588.jpg" />
      <div class="card-product-infos">
        <%=link_to cocktail.name, cocktail_path(cocktail)%>
      </div>
    </div>
  <% end %>
</div>








